@if (ViewBag.Message != null)
{
    <h2 class="alert-success p-3 rounded-3 text-center mb-5">@ViewBag.Message</h2>
}

<br />

<a class="btn btn-success rounded-pill mb-5" href="/Projects/New">
    <i class="bi bi-plus">Creaza proiect</i> 
</a>


<div class="row">
    @foreach (var project in ViewBag.Projects)
    {
        <div class="col-4 mb-4">
            <div class="card" style="width: 100%;">
                @*<img src="..." class="card-img-top" alt="..."> *@

                <div class="card-body">

                    <h5 class="card-title" name="Name">@project.Name</h5>

                    @if (ViewBag.EsteAdmin)
                    {
                        <div><i class="bi bi-person"> Creat de: </i> @project.User.UserName</div>
                    }

                    <br />

                    <a class="btn alert-success" href="/Projects/Show/@project.Id">Detalii proiect</a>


                   
                </div>
            </div>
        </div>
    }
</div>
