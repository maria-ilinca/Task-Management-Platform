<style>
    body{
        background-color: #205295;
    }

</style>
@if (ViewBag.Message != null)
{
    <h2 class="alert  p-3 rounded-3 text-center mb-5" style="color:antiquewhite">@ViewBag.Message</h2>
}

<br />

<a class="btn btn-success rounded-pill mb-5" href="/Projects/New">
    <i class="bi bi-plus">Creaza proiect</i> 
</a>


<div class="row">
    @foreach (var project in ViewBag.Projects)
    {
        <div class="col-4 mb-4">
            <div class="card" style="width: 100%; background-color:#2C74B3">
                @*<img src="..." class="card-img-top" alt="..."> *@

                <div class="card-body">

                    <h5 class="card-title" name="Name">@project.Name</h5>

                    @if (ViewBag.EsteAdmin)
                    {
                        <div><i class="bi bi-person"> Creat de: </i> @project.User.UserName</div>
                    }

                    <br />

                    <a class="btn btn-dark" href="/Projects/Show/@project.Id">Detalii proiect</a>


                   
                </div>
            </div>
        </div>
    }
</div>
