@using Microsoft.AspNetCore.Identity


@inject SignInManager<ApplicationUser> SignInManager
@inject UserManager<ApplicationUser> UserManager
<script src="https://kit.fontawesome.com/db688ea2cd.js" crossorigin="anonymous"></script>
<style>
    .navbar-bg{
        background-image: url("@Url.Content("~/images/img_layout.png")")
    }

</style>
<div class="navbar-bg">
    <ul class="navbar-nav">
    @if (SignInManager.IsSignedIn(User))
    {
        <li class="nav-item">
            <a  class="nav-link text-dark" asp-area="Identity" asp-page="/Account/Manage/Index" title="Manage">Hello @User.Identity?.Name!</a>
        </li>
        <li class="nav-item">
            <form  class="form-inline" asp-area="Identity" asp-page="/Account/Logout" asp-route-returnUrl="@Url.Action("Index", "Home", new { area = "" })">
                <button  type="submit" class="nav-link btn btn-link text-dark">Logout</button>
            </form>
        </li>
    }
    else
    {
        <li class="nav-item">
                <a class="nav-link text-dark fa fa-user-plus" asp-area="Identity" asp-page="/Account/Register">Register</a>
        </li>
        <li class="nav-item">
            <a class="nav-link text-dark fa fa-user" asp-area="Identity" asp-page="/Account/Login">Login</a>
        </li>
    }
    </ul>
</div>
