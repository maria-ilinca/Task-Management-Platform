@model Task_Management_Platform.Models.Task


<h2 class="text-center mt-5">Adaugarea unui task</h2>
<br />
<div class="container mt-5">
    <div class="row">
        <div class="col-6 offset-3">

            @using (Html.BeginForm(actionName: "New", controllerName: "Tasks",
            method: FormMethod.Post))
            {

                @Html.ValidationSummary(false, "", new { @class = "text-danger" })

                @Html.Label("Title", "Numele unui task")
                <br />
                @Html.TextBox("Title", null, new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.Title, "", new { @class = "text-danger" })
                <br />

                <br />

                @Html.Label("Description", "Descrierea unui task")
                <br />
                @Html.TextArea("Description", null, new { @class = "form-control" })

                @Html.ValidationMessage("Description", null, new { @class = "text-danger" })
                <br />

                <br />

                @*@Html.Label("DataFinalizare", "Data de finalizare a task-ului")
                <br />
                @Html.TextBoxFor(x => x.DataFinalizare, "{0:yyyy-MM-dd}", new { @class = "dateInput", @placeholder = "Data finalizare" })
                @Html.ValidationMessage("DataFinalizare", null, new {@class = "text-danger"})*@


                // De pe stackoverflow https://stackoverflow.com/questions/62049179/how-to-use-datepicker-on-mvc-core-in-asp-form

                <link rel="stylesheet" href="//code.jquery.com/ui/1.12.1/themes/base/jquery-ui.css">
                <link rel="stylesheet" href="/resources/demos/style.css">
                <script src="https://code.jquery.com/jquery-1.12.4.js"></script>
                <script src="https://code.jquery.com/ui/1.12.1/jquery-ui.js"></script>

                <div class="form-group">
                    <label asp-for="DataFinalizare" class="control-label"></label>
                    <input asp-for="DataFinalizare" id="datepicker" class="form-control" placeholder="select date" />
                    <span asp-validation-for="DataFinalizare" class="text-danger"></span>
                </div>

                <br />
                <br />

                <label>Selectati task-ul in functie de status</label>
                string[] ViableStatuses = new[] { "In progress", "Not started", "Finished" };
                @Html.DropDownListFor(m => m.Status, new SelectList(ViableStatuses),
                "Selectati categoria", new { @class = "form-control" })

                @Html.ValidationMessageFor(m => m.TaskId, null, new { @class = "text-danger" })
                <br />

                <br />


                <button class="btn btn-success" type="submit">Adauga un task</button>

            }

        </div>
    </div>
</div>








